<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DMX Chart</title>
  <link rel="stylesheet" href="styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
</head>
<body>

  <!-- Top Toolbar -->
  <div class="container-fluid bg-light border-bottom py-3">
    <div class="row g-2 align-items-center justify-content-start flex-column flex-md-row px-2">
      <div class="col-auto">
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Change User
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#" data-user="Ms Kellogg">Ms Kellogg</a></li>
            <li><a class="dropdown-item" href="#" data-user="Rob">Rob</a></li>
            <li><a class="dropdown-item" href="#" data-user="Maddie">Maddie</a></li>
          </ul>
        </div>
      </div>
      <div class="col-12 col-md-auto">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <div class="col-auto">
        <button id='addNewBtn' data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-secondary w-100 w-md-auto">Add New Instrument</button>
      </div>
      <div class="col-auto">
        <button id='pendingbtn' class="btn btn-secondary w-100 w-md-auto" data-bs-toggle="collapse" data-bs-target="#pending" aria-expanded="true" aria-controls="pending">
          Hide Changelog
        </button>
      </div>
    </div>
  </div>

  <!-- Header -->
  <div class="container-fluid text-center my-3">
    <h3 id="hi">Hi</h3>
  </div>

  <!-- Main Content -->
  <div class="container-fluid">
    <div class="row flex-column flex-md-row">

     <!-- Table Section -->
<div class="col flex-grow-1 px-2 order-2 order-md-1">
  <div id='table' class="w-100">
    <%- include('partials/list') %>
  </div>
</div>


      <!-- Pending Panel -->
<div id="pending"
class="collapse show p-3 bg-white border-start border-top border-md-top-0 border-md-start shadow order-1 order-md-2"
style="transition: none;">
<%- include('partials/pending') %>
</div>




    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <%- include('modals/new') %>
  </div>

  <!-- Scripts -->
  <script>
    const emptyBlocks = <%- JSON.stringify(emptyBlocks) %>;
    console.log("emptyBlocks:", emptyBlocks);
  </script>
  <script src="script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>

</body>
</html>
